@using VNNB2B.Models.Hata
@model EntityLayer.Dto.DtoKullanici
@{
    ViewData["Title"] = "KullaniciDetay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    int id = Convert.ToInt32(ViewBag.id);
    string mesaj = ViewBag.hata;
    var hasError = !string.IsNullOrEmpty(ViewBag.hata);
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @if (hasError)
    {
        <script>
            $(document).ready(function () {
                Swal.fire({
                    icon: 'info',
                    title: '@mesaj'
                });
            });
        </script>
    }
    ParametreHata.Icerik = "";
}
<br />
<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-header border-transparent">
                <div id="flStackForm" class="col-lg-12 layout-spacing layout-top-spacing">
                    <div class="statbox widget box box-shadow">
                        <div class="widget-header">
                            <div class="row">
                                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                    <center><h2>KULLANICI KARTI DÜZENLE</h2></center>
                                </div>
                            </div>
                        </div>
                        <div class="widget-content widget-content-area">
                            <form id="KullaniciForm">
                                <input name="ID" id="ID" value="@id" type="hidden" />
                                <div class="form-group mb-3">
                                    @Html.DropDownList("DepartmanID", (List<SelectListItem>)ViewBag.departman, "Tanımlı Departman : " + @Model.DepartmanID, new { @class = "form-control select2", id = "DepartmanID" })
                                </div>
                                <div class="form-group mb-3">
                                    <input type="text" class="form-control" id="AdSoyad" aria-describedby="emailHelp1" placeholder="@Model.AdSoyad">
                                </div>
                                <div class="form-group mb-3">
                                    <input type="text" class="form-control" id="KullaniciAdi" aria-describedby="emailHelp1" placeholder="@Model.KullaniciAdi">
                                </div>
                                <div class="form-group mb-3">
                                    <input type="text" class="form-control" id="Telefon" aria-describedby="emailHelp1" placeholder="@Model.Telefon">
                                </div>
                                <div class="form-group mb-3">
                                    <input type="text" class="form-control" id="Adres" aria-describedby="emailHelp1" placeholder="@Model.Adres">
                                </div>
                                <div class="form-group mb-3">
                                    <input type="email" class="form-control" id="EPosta" aria-describedby="emailHelp1" placeholder="@Model.EPosta">
                                </div>
                                <button type="button" onclick="AddForm()" class="btn btn-info mt-3">Güncelle</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-6">
        <div class="card">
            <div class="card-header border-transparent">
                <div id="flStackForm" class="col-lg-12 layout-spacing layout-top-spacing">
                    <div class="statbox widget box box-shadow">
                        <div class="widget-header">
                            <div class="row">
                                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                    <center><h2>ŞİFRE DEĞİŞTİR</h2></center>
                                </div>
                            </div>
                        </div>
                        <div class="widget-content widget-content-area">
                            <form id="KullaniciForm">
                                <input name="ID" id="ID" value="@id" type="hidden" />
                                <div class="form-group mb-3">
                                    <input type="text" class="form-control" id="Eski" aria-describedby="emailHelp1" placeholder="Eski Şifre">
                                </div>
                                <div class="form-group mb-3">
                                    <input type="text" class="form-control" id="Yeni" aria-describedby="emailHelp1" placeholder="Yeni Şifre">
                                </div>
                                <div class="form-group mb-3">
                                    <input type="text" class="form-control" id="Yeni1" aria-describedby="emailHelp1" placeholder="Yeni Şifre Tekrar">
                                </div>
                                <button type="button" onclick="Sifre()" class="btn btn-info mt-3">Güncelle</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-4">
        <div class="card">
            <div class="card-header border-transparent">
                <div id="flStackForm" class="col-lg-12 layout-spacing layout-top-spacing">
                    <div class="statbox widget box box-shadow">
                        <div class="widget-header">
                            <div class="row">
                                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                    <center><h2>KULLANICIYA PANEL YETKİSİ EKLE</h2></center>
                                </div>
                            </div>
                        </div>
                        <div class="widget-content widget-content-area">
                            <form id="YetkiForm">
                                <input name="KullaniciID" id="KullaniciID" value="@id" type="hidden" />
                                <div class="form-group mb-3">
                                    @Html.DropDownList("YetkiTurlariID", (List<SelectListItem>)ViewBag.yetkiler, "PANEL SEÇİNİZ...", new { @class = "form-control basic", id = "YetkiTurlariID" })
                                </div>
                                <button type="button" onclick="YetkiEkle()" class="btn btn-primary mt-3">Kaydet</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-8">
        <div class="card">
            <div class="card-header border-transparent">
                <div id="flStackForm" class="col-lg-12 layout-spacing layout-top-spacing">
                    <div class="statbox widget box box-shadow">
                        <div class="widget-header">
                            <div class="row">
                                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                    <center><h2>KULLANICIYA AÇIK PANELLER</h2></center>
                                </div>
                            </div>
                        </div>
                        <div class="widget-content widget-content-area">
                            <div class="table-responsive">
                                <table id="myTable" class="table table-hover" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>PANEL TANIMI</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://code.jquery.com/jquery-3.7.0.js"></script>

<script>
    var myDataTable;
    function initializeDataTable() {
        myDataTable = new DataTable('#myTable', {
            ajax: {
                url: '/ParametreApi/YetkiTurlariID/@id',
                method: 'POST',
                dataSrc: '',
                error: function (xhr, error, thrown) {
                    if (xhr.status === 404) {
                        Swal.fire({
                            title: 'Veri alınamadı',
                            animation: false,
                            customClass: 'animated tada',
                            padding: '2em'
                        });
                    }
                    return false;
                }
            },
            columns: [
                { data: 'yetkiTurlariID' },
                {
                    data: 'id',
                    render: function (data, type, full, meta) {
                        return '<button type="button" onclick="sil(' + data + ')" class="btn btn-danger mb-2 mr-2 btn-rounded"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">< path d = "M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" /><path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" /></svg></button>'
                    }
                }
            ],
            language: {
                url: "//cdn.datatables.net/plug-ins/1.10.12/i18n/Turkish.json"
            }
        });
    }
    function tabloGuncelle() {
        if (myDataTable) {
            myDataTable.destroy();
        }
        initializeDataTable();
    }
    $(document).ready(function () {
        initializeDataTable();
    })
    function AddForm() {
        var form = $('#KullaniciForm')[0];
        var formData = new FormData(form);
        formData.append("ID", $("#ID").val());
        formData.append("DepartmanID", $("#DepartmanID").val());
        formData.append("AdSoyad", $("#AdSoyad").val());
        formData.append("KullaniciAdi", $("#KullaniciAdi").val());
        formData.append("Sifre", $("#Sifre").val());
        formData.append("Telefon", $("#Telefon").val());
        formData.append("Adres", $("#Adres").val());
        formData.append("EPosta", $("#EPosta").val());
        $.ajax({
            type: "POST",
            url: "/ParametreApi/KullaniciDuzenle",
            data: formData,
            contentType: false,
            processData: false,
            dataType: "json",
            success: function (result) {
                swal.fire({
                    title: result.status === "success" ? 'Başarılı!' : 'Başarısız!',
                    text: result.message,
                    type: result.status === "success" ? 'success' : 'warning',
                    confirmButtonText: 'Tamam'
                });
                $("#DepartmanID").val('');
                $("#AdSoyad").val('');
                $("#KullaniciAdi").val('');
                $("#Sifre").val('');
                $("#Telefon").val('');
                $("#Adres").val('');
                $("#EPosta").val('');
                tabloGuncelle();
            }
        });
    }
    function YetkiEkle() {
        var form = $('#YetkiForm')[0];
        var formData = new FormData(form);
        formData.append("YetkiTurlariID", $("#YetkiTurlariID").val());
        formData.append("KullaniciID", @id);
        $.ajax({
            type: "POST",
            url: "/ParametreApi/KullaniciYetkiEkle",
            data: formData,
            contentType: false,
            processData: false,
            dataType: "json",
            success: function (result) {
                swal.fire({
                    title: result.status === "success" ? 'Başarılı!' : 'Başarısız!',
                    text: result.message,
                    type: result.status === "success" ? 'success' : 'warning',
                    confirmButtonText: 'Tamam'
                });
                $("#YetkiTurlariID").val('');
                tabloGuncelle();
            }
        });
    }
    function Sifre() {
        var form = $('#YetkiForm')[0];
        var formData = new FormData(form);
        formData.append("Yeni", $("#Yeni").val());
        formData.append("Yeni1", $("#Yeni1").val());
        formData.append("Eski", $("#Eski").val());
        formData.append("id", @id);
        $.ajax({
            type: "POST",
            url: "/ParametreApi/KullaniciSifreDeğis",
            data: formData,
            contentType: false,
            processData: false,
            dataType: "json",
            success: function (result) {
                swal.fire({
                    title: result.status === "success" ? 'Başarılı!' : 'Başarısız!',
                    text: result.message,
                    type: result.status === "success" ? 'success' : 'warning',
                    confirmButtonText: 'Tamam'
                });
                $("#Yeni").val('');
                $("#Yeni1").val('');
                $("#Eski").val('');
                tabloGuncelle();
            }
        });
    }
    function sil(element) {
        swal.fire({
            title: 'Emin Misin?',
            text: "Kayıt Silinecek!",
            type: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Evet, Sil!',
            cancelButtonText: 'Hayır, Vazgeç!',
            reverseButtons: true,
            padding: '2em'
        }).then(function (result) {
            if (result.value) {
                submitForm(element);
            }
        })
    }
    function submitForm(element) {
        $.ajax({
            type: "POST",
            url: "/ParametreApi/KullaniciYetkiSil/" + element,
            dataType: "json",
            success: function (result) {
                swal.fire({
                    title: result.status === "success" ? 'Başarılı!' : 'Başarısız!',
                    text: result.message,
                    type: result.status === "success" ? 'success' : 'warning',
                    confirmButtonText: 'Tamam'
                });
                tabloGuncelle();
            }
        });
    }
</script>