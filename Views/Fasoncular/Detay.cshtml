<script>
    function sil(element) {
        swal.fire({
            title: 'Emin Misin?',
            text: "Kayıt Silinecek!",
            type: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Evet, Sil!',
            cancelButtonText: 'Hayır, Vazgeç!',
            reverseButtons: true,
            padding: '2em'
        }).then(function (result) {
            if (result.value) {
                submitForm(element);
            }
        })
    }
    function submitForm(element) {
        $.ajax({
            type: "POST",
            url: "/FasoncuApi/FasoncuSil/" + element,
            dataType: "json",
            success: function (result) {
                swal.fire({
                    title: result.status === "success" ? 'Başarılı!' : 'Başarısız!',
                    text: result.message,
                    type: result.status === "success" ? 'success' : 'warning',
                    confirmButtonText: 'Tamam'
                });
                tabloGuncelle();
            }
        });
    }
    function AddForm() {
        var formData = {
            ID: $("#ID").val(),
            Unvan: $("#Unvan").val(),
            Adres: $("#Adres").val(),
            Telefon: $("#Telefon").val(),
            EPosta: $("#EPosta").val(),
            Yetkili: $("#Yetkili").val(),
            VergiDairesi: $("#VergiDairesi").val(),
            VergiNo: $("#VergiNo").val(),
            FasoncuKodu: $("#FasoncuKodu").val(),
        };
        $.ajax({
            type: "POST",
            url: "/FasoncuApi/FasoncuDuzenle",
            data: formData,
            dataType: "json",
            success: function (result) {
                swal.fire({
                    title: result.status === "success" ? 'Başarılı!' : 'Başarısız!',
                    text: result.message,
                    type: result.status === "success" ? 'success' : 'warning',
                    confirmButtonText: 'Tamam'
                });
                $("#Unvan").val('');
                $("#Adres").val('');
                $("#Telefon").val('');
                $("#EPosta").val('');
                $("#Yetkili").val('');
                $("#VergiDairesi").val('');
                $("#VergiNo").val('');
                $("#TedarikciKodu").val('');
                tabloGuncelle();
            }
        });
    }
</script>