    <script type="text/javascript">
        $(document).ready(function () {
            sepetsayigetir();
        })
        function sepetsayigetir() {
            $.ajax({
                type: "POST",
                url: "/SiparisApi/SepetBilgi",
                data: { id: @cerez },
                success: function (x) {
                    $("#txtsepetadet").text(" " + x.sepetAdet);
                }
            });
        }
    </script>
    <style type="text/css" href="https://fonts.googleapis.com/css?family=Lato&display=swap"></style>
