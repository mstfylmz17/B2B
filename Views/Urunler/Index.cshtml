@using VNNB2B.Models.Hata
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    string mesaj = ViewBag.hata;
    var hasError = !string.IsNullOrEmpty(ViewBag.hata);
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @if (hasError)
    {
        <script>
            $(document).ready(function () {
                Swal.fire({
                    icon: 'info',
                    title: '@mesaj'
                });
            });
        </script>
    }
    UrunHata.Icerik = "";
}
<br />
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header border-transparent">
                <div id="flStackForm" class="col-lg-12 layout-spacing layout-top-spacing">
                    <div class="statbox widget box box-shadow">
                        <div class="widget-header">
                            <div class="row">
                                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                    <h4>Ürün Ekle</h4>
                                </div>
                            </div>
                        </div>
                        <div class="widget-content widget-content-area">
                            <form id="UrunForm">
                                <div class="row">
                                    <div class="form-group mb-3 col-6">
                                        <label>Ürün Kategori</label>
                                        @Html.DropDownList("UrunKategoriID", (List<SelectListItem>)ViewBag.kat, "Kategori Seçiniz...", new { @class = "form-control basic", id = "UrunKategoriID" })
                                    </div>
                                    <div class="form-group mb-3 col-6">
                                        <label>Ürün Türü <span style="color:darkred">*</span></label>
                                        @Html.DropDownList("UrunTuruID", (List<SelectListItem>)ViewBag.urungrubu, "Ürün Türü Seçiniz...", new { @class = "form-control basic", id = "UrunTuruID" })
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group mb-3 col-6">
                                        <label>Ürün Kodu <span style="color:darkred">*</span></label>
                                        <input type="text" class="form-control" id="UrunKodu">
                                    </div>
                                    <div class="form-group mb-3 col-6">
                                        <label>Ürün Adı <span style="color:darkred">*</span></label>
                                        <input type="text" class="form-control" id="UrunAdi">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group mb-3 col-6">
                                        <label>Birim KG</label>
                                        <input type="text" class="form-control" id="BirimKG">
                                    </div>
                                    <div class="form-group mb-3 col-6">
                                        <label>Birim M3</label>
                                        <input type="text" class="form-control" id="BirimM3">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group mb-3 col-6">
                                        <label>Boyut</label>
                                        <input type="text" class="form-control" id="Boyut">
                                    </div>
                                    <div class="form-group mb-3 col-6">
                                        <label>Paket Adedi</label>
                                        <input type="text" class="form-control" id="PaketAdet">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group mb-3 col-6">
                                        <label>Kritik Stok Miktarı <span style="color:darkred">*</span></label>
                                        <input type="number" class="form-control" id="KritikStokMiktari">
                                    </div>
                                    <div class="form-group mb-3 col-6">
                                        <label>Birim <span style="color:darkred">*</span></label>
                                        @Html.DropDownList("BirimID", (List<SelectListItem>)ViewBag.birim, "Birim Seçiniz...", new { @class = "form-control basic", id = "BirimID" })
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="input-group col-6">
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" id="imagee" name="imagee">
                                            <label class="custom-file-label" for="exampleInputFile">Resim Yükle</label>
                                        </div>
                                    </div>
                                    <div class="col-6" style="margin-top:-15px;">
                                        <button type="button" onclick="AddForm()" class="btn btn-primary mt-3">Kaydet</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12">
        <div class="card">
            <div class="card-header border-transparent">
                <div id="flStackForm" class="col-lg-12 layout-spacing layout-top-spacing">
                    <div class="statbox widget box box-shadow">
                        <div class="widget-header">
                            <div class="row">
                                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                    <h4>Ürünler</h4>
                                </div>
                            </div>
                        </div>
                        <div class="widget-content widget-content-area">
                            <div class="table-responsive" style="font-size:12px;">
                                <table id="myTable" class="table table-hover" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>Resim</th>
                                            <th>Ürün Türü</th>
                                            <th>Ürün Kodu</th>
                                            <th>Ürün Adı</th>
                                            <th>Kritik Stok Miktarı</th>
                                            <th>Güncel Stok</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://code.jquery.com/jquery-3.7.0.js"></script>

<script>
    var myDataTable;
    function initializeDataTable() {
        myDataTable = new DataTable('#myTable', {
            ajax: {
                url: '/UrunApi/UrunList',
                method: 'POST',
                dataSrc: '',
                error: function (xhr, error, thrown) {
                    if (xhr.status === 404) {
                        Swal.fire({
                            title: 'Veri alınamadı',
                            animation: false,
                            customClass: 'animated tada',
                            padding: '2em'
                        });
                    }
                    return false;
                }
            },
            columns: [
                {
                    data: 'id',
                    render: function (data, type, full, meta) {
                        return '<img id="img_' + data + '" loading="lazy" class="img-thumbnail" style="width: 100px;"  />';
                    }
                },
                { data: 'urunTuru' },
                { data: 'urunKodu' },
                { data: 'urunAdi' },
                { data: 'kritikStokMiktari' },
                { data: 'stokMiktari' },
                {
                    data: 'id',
                    render: function (data, type, full, meta) {
                        return '<a href="/Urunler/Detay/' + data + '" class="btn btn-primary mb-2 mr-2 btn-rounded"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16"><path d = "M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8M1.173 8a13 13 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5s3.879 1.168 5.168 2.457A13 13 0 0 1 14.828 8q-.086.13-.195.288c-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5s-3.879-1.168-5.168-2.457A13 13 0 0 1 1.172 8z"/><path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5M4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0" /></svg></a>' + '<button type="button" onclick="sil(' + data + ')" class="btn btn-danger mb-2 mr-2 btn-rounded"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">< path d = "M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" /><path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" /></svg></button>'
                    }
                }
            ],
            language: {
                url: "//cdn.datatables.net/plug-ins/1.10.12/i18n/Turkish.json"
            },
            paging: false,
            scrollY: '73vh',
            scrollCollapse: true,
            ordering: false,
            initComplete: function (settings, json) {
                loadImages(json);
            }
        });
    }
    function loadImages(data) {
        data.forEach(function (item) {
            $.ajax({
                url: '/UrunApi/GetResim',
                method: 'POST',
                data: { id: item.id },
                success: function (imageData) {
                    $('#img_' + item.id).attr('src', 'data:image/jpeg;base64,' + imageData);
                },
                error: function (xhr, status, error) {
                    console.log('Resim yüklenirken hata oluştu: ', error);
                }
            });
        });
    }
    function tabloGuncelle() {
        if (myDataTable) {
            myDataTable.destroy();
        }
        initializeDataTable();
    }
    $(document).ready(function () {
        initializeDataTable();
    })
    function sil(element) {
        swal.fire({
            title: 'Emin Misin?',
            text: "Kayıt Silinecek!",
            type: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Evet, Sil!',
            cancelButtonText: 'Hayır, Vazgeç!',
            reverseButtons: true,
            padding: '2em'
        }).then(function (result) {
            if (result.value) {
                submitForm(element);
            }
        })
    }
    function submitForm(element) {
        $.ajax({
            type: "POST",
            url: "/UrunApi/UrunSil/" + element,
            dataType: "json",
            success: function (result) {
                swal.fire({
                    title: result.status === "success" ? 'Başarılı!' : 'Başarısız!',
                    text: result.message,
                    type: result.status === "success" ? 'success' : 'warning',
                    confirmButtonText: 'Tamam'
                });
                tabloGuncelle();
            }
        });
    }
    function AddForm() {
        var form = $('#UrunForm')[0];
        var formData = new FormData(form);
        formData.append("UrunKategoriID", $("#UrunKategoriID").val());
        formData.append("UrunTuruID", $("#UrunTuruID").val());
        formData.append("UrunKodu", $("#UrunKodu").val());
        formData.append("UrunAdi", $("#UrunAdi").val());
        formData.append("KritikStokMiktari", $("#KritikStokMiktari").val());
        formData.append("BirimID", $("#BirimID").val());
        formData.append("imagee", $("#imagee").val());
        formData.append("BirimKG", $("#BirimKG").val());
        formData.append("BirimM3", $("#BirimM3").val());
        formData.append("Boyut", $("#Boyut").val());
        formData.append("PaketAdet", $("#PaketAdet").val());
        formData.append("FiyatTL", $("#FiyatTL").val());
        formData.append("FiyatUSD", $("#FiyatUSD").val());
        $.ajax({
            type: "POST",
            url: "/UrunApi/UrunEkle",
            data: formData,
            contentType: false,
            processData: false,
            dataType: "json",
            success: function (result) {
                swal.fire({
                    title: result.status === "success" ? 'Başarılı!' : 'Başarısız!',
                    text: result.message,
                    type: result.status === "success" ? 'success' : 'warning',
                    confirmButtonText: 'Tamam'
                });
                if (result.status == "success") {
                    $("#UrunKategoriID").val('');
                    $("#UrunTuruID").val('');
                    $("#UrunKodu").val('');
                    $("#UrunAdi").val('');
                    $("#KritikStokMiktari").val('');
                    $("#BirimID").val('');
                    $("#imagee").val('');
                    $("#BirimKG").val('');
                    $("#BirimM3").val('');
                    $("#Boyut").val('');
                    $("#PaketAdet").val('');
                    $("#FiyatTL").val('');
                    $("#FiyatUSD").val('');
                    tabloGuncelle();
                }
            }
        });
    }
</script>