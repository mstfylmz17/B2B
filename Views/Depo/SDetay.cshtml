@using VNNB2B.Models.Hata
@{
    ViewData["Title"] = "SDetay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    string mesaj = ViewBag.hata;
    var hasError = !string.IsNullOrEmpty(ViewBag.hata);
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @if (hasError)
    {
        <script>
            $(document).ready(function () {
                Swal.fire({
                    icon: 'info',
                    title: '@mesaj'
                });
            });
        </script>
    }
    SiparisHata.Icerik = "";
    int id = Convert.ToInt32(ViewBag.id);
}
<br />

<style>
    table.table-tab {
        border-collapse: collapse;
        width: 100%;
    }

        table.table-tab th, table.table-tab td {
            border: 2px double #B17F2C;
        }

        table.table-tab th {
            background-color: #f8f9fa;
            color: #B17F2C;
            border-top: 2px solid #B17F2C;
        }

        table.table-tab td {
            background-color: white;
            color: #B17F2C;
        }

        table.table-tab thead th {
            border-top: 2px solid #B17F2C;
        }

    table.dataTable tbody tr {
        height: 25px;
    }

    table.dataTable tbody td {
        line-height: 25px;
        vertical-align: middle;
    }
</style>

<div class="col-lg-12">
    <div class="card" style="background-color:white;">
        <div class="card-body">
            <div class="row">
                <div class="col-12 col-sm-12">
                    <div class="card-body" style="font-size:16px;">
                        <table class=" table-tab" style="width:100%;">
                            <thead>
                                <tr>
                                    <th>SİPARİŞ NO / ORDER NO</th>
                                    <th id="txtsiparisno"></th>
                                </tr>
                                <tr>
                                    <th>SİPARİŞ TARİHİ / ORDER DATE</th>
                                    <th id="txtsiparistarihi"></th>
                                </tr>
                                <tr>
                                    <th>SİPARİŞ DURUMU / ORDER STATUS</th>
                                    <th id="txtsiparisdurum"></th>
                                </tr>
                                <tr>
                                    <th>ONAYLAYAN YETKİLİ / APPROVING AUTHORITY</th>
                                    <th id="txtkullanici"></th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
                <div class="col-12 col-sm-12">
                    <div style="font-size:12px;">
                        <table class="table table-bordered" id="sepettable">
                            <thead>
                                <tr style="background-color:#B17F2C">
                                    <th style="width:12%;">
                                        <center>
                                            Ürün Resmi <br /> Product Image
                                        </center>
                                    </th>
                                    <th style="width:15%;">
                                        <center>
                                            Ürün Kodu <br /> Product Kode
                                        </center>
                                    </th>
                                    <th style="width:23%;">
                                        <center>
                                            Ürün Adı <br /> Product Name
                                        </center>
                                    </th>
                                    <th style="width:5%;"><center>Adet <br /> Amount</center></th>
                                    <th style="width:15%;"><center>Ahşap Rengi <br /> Wood Color</center></th>
                                    <th style="width:15%;"><center>Deri Rengi <br /> Skin Color</center></th>
                                    <th style="width:15%;">
                                        <center>
                                            Özel Not
                                            <br />
                                            Special Note
                                        </center>
                                    </th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
                <div class="col-12">
                    <div class="row">
                        <div class="col-6">
                            <div class="card-body">
                                <table class="table-tab">
                                    <thead>
                                        <tr>
                                            <th style="width:50%;">TOPLAM SİPARİŞ ADEDİ</th>
                                            <th style="width:50%; text-align: center;" id="txttoplamadet"></th>
                                        </tr>
                                        <tr>
                                            <th style="width:50%;">TOPLAM SİPARİŞ PARÇA ADEDİ</th>
                                            <th style="width:50%; text-align: center;" id="txttoplamparcaadet"></th>
                                        </tr>
                                        <tr>
                                            <th style="width:50%;">TOPLAM SİPARİŞ M3</th>
                                            <th style="width:50%; text-align: center;" id="txttoplamm3"></th>
                                        </tr>
                                        <tr>
                                            <th style="width:50%;">TOPLAM SİPARİŞ KG</th>
                                            <th style="width:50%; text-align: center;" id="txttoplamkg"></th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                        <div class="col-6">
                        </div>
                    </div>
                    <a href="#" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#dosya"><i class="fas fa-file"></i> Onay Dosyasını Gör</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="dosya">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Onaylı Belge Ön İzleme</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <iframe id="filePreview" src="" frameborder="0" style="width: 100%; height: 600px;"></iframe>
            </div>
        </div>
    </div>
</div>

<link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://code.jquery.com/jquery-3.7.0.js"></script>

<script>
    var satirid = 0;
    var myDataTable;
    function initializeDataTable() {
        myDataTable = new DataTable('#sepettable', {
            ajax: {
                url: '/SiparisApi/SiparisDetay/@id',
                method: 'POST',
                dataSrc: '',
                error: function (xhr, error, thrown) {
                    if (xhr.status === 404) {
                        Swal.fire({
                            title: 'Veri alınamadı',
                            animation: false,
                            customClass: 'animated tada',
                            padding: '2em'
                        });
                    }
                    return false;
                }
            },
            columns: [
                {
                    data: 'resim',
                    render: function (data, type, full, meta) {
                        return '<center><img src="' + data + '" class="img-thumbnail" style="width: 100px;" /></center>';
                    }
                },
                {
                    data: 'urunKodu',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center; color:black;">' + data + '</div>';
                    }
                },
                {
                    data: 'urunAciklama',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center; color:black;">' + data + '</div>';
                    }
                },
                {
                    data: 'miktar',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center; color:black;">' + data + '</div>';
                    }
                },
                {
                    data: 'ahsapRengi',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center; color:black;">' + data + '</div>';
                    }
                },
                {
                    data: 'deriRengi',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center; color:black;">' + data + '</div>';
                    }
                },
                {
                    data: 'aciklama',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center; color:black;">' + data + '</div>';
                    }
                }
            ],
            language: {
                url: "//cdn.datatables.net/plug-ins/1.10.12/i18n/Turkish.json"
            },
            ordering: false,
            searching: false,
            lengthChange: false,
            paging: false,
            info: false,
        });
    }
    function tabloGuncelle() {
        if (myDataTable) {
            myDataTable.destroy();
        }
        Bilgiler();
        initializeDataTable();
    }
    $(document).ready(function () {
        Bilgiler();
        initializeDataTable();
    })
    function Bilgiler() {
        $.ajax({
            type: "POST",
            url: "/SiparisApi/SiparisDetayBilgi",
            data: { id: @id },
            success: function (x) {
                $("#txttoplamadet").text(x.toplamAdet);
                $("#txtaratoplam").text(x.araToplam);
                $("#txtgeneltoplam").text(x.toplamTutar);
                $("#txtiskontotoplam").text(x.istoktoToplam);
                $("#txtkdvtoplam").text(x.kdvToplam);
                $("#txtsiparisno").text(x.siparisNo);
                $("#txtsiparistarihi").text(x.siparisTarihi);
                $("#txtsiparisdurum").text(x.siparisDurum);
                $("#txtkullanici").text(x.kullanici);
                $("#txtindirimlifiyat").text(x.indirimlifiyat);
                $("#txtunvan").text(x.unvan);
                $("#txtfirmaadi").text(x.firmaAdi);
                $("#txtyetkili").text(x.yetkili);
                $("#txttelefon").text(x.telefon);
                $("#txtadres").text(x.adres);
                $("#txttoplamparcaadet").text(x.toplamparcaadet);
                $("#txttoplamm3").text(x.toplamm3);
                $("#txttoplamkg").text(x.toplamkg);
                $('#filePreview').attr('src', x.dosyaYolu);
            }
        });
    }
</script>