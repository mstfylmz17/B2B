@using VNNB2B.Models.Hata
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    string mesaj = ViewBag.hata;
    var hasError = !string.IsNullOrEmpty(ViewBag.hata);
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @if (hasError)
    {
        <script>
            $(document).ready(function () {
                Swal.fire({
                    icon: 'info',
                    title: '@mesaj'
                });
            });
        </script>
    }
    BayiHata.Icerik = "";
}
<br />

<div class="row">
    <div class="col-4">
        <div class="card">
            <div class="card-header border-transparent">
                <div id="flStackForm" class="col-lg-12 layout-spacing layout-top-spacing">
                    <div class="statbox widget box box-shadow">
                        <div class="widget-header">
                            <div class="row">
                                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                    <h4>Bayi Ekle</h4>
                                </div>
                            </div>
                        </div>
                        <div class="widget-content widget-content-area">
                            <form>
                                <div class="row">
                                    <div class="form-group mb-3 col-6">
                                        <label>Ünvan <span style="color:darkred">*</span></label>
                                        <input type="text" class="form-control" id="Unvan" aria-describedby="emailHelp1">
                                    </div>
                                    <div class="form-group mb-3 col-6">
                                        <label>Bayi Kodu <span style="color:darkred">*</span></label>
                                        <input type="text" class="form-control" id="BayiKodu" aria-describedby="emailHelp1">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group mb-3 col-6">
                                        <label>Firma Adı <span style="color:darkred">*</span></label>
                                        <input type="text" class="form-control" id="KullaniciAdi" aria-describedby="emailHelp1">
                                    </div>
                                    <div class="form-group mb-3 col-6">
                                        <label>Şifre <span style="color:darkred">*</span></label>
                                        <input type="text" class="form-control" id="Sifre" aria-describedby="emailHelp1">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group mb-3 col-6">
                                        <label>Telefon <span style="color:darkred">*</span></label>
                                        <input type="text" class="form-control" id="Telefon" aria-describedby="emailHelp1">
                                    </div>
                                    <div class="form-group mb-3 col-6">
                                        <label>E-Posta Adresi</label>
                                        <input type="text" class="form-control" id="EPosta" aria-describedby="emailHelp1">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group mb-3 col-6">
                                        <label>Adres</label>
                                        <input type="text" class="form-control" id="Adres" aria-describedby="emailHelp1">
                                    </div>
                                    <div class="form-group mb-3 col-6">
                                        <label>Yetkili <span style="color:darkred">*</span></label>
                                        <input type="text" class="form-control" id="Yetkili" aria-describedby="emailHelp1">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group mb-3 col-6">
                                        <button type="button" onclick="AddForm()" class="btn btn-primary mt-3">Kaydet</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-8">
        <div class="card">
            <div class="card-header border-transparent">
                <div id="flStackForm" class="col-lg-12 layout-spacing layout-top-spacing">
                    <div class="statbox widget box box-shadow">
                        <div class="widget-header">
                            <div class="row">
                                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                    <h4>Bayiler</h4>
                                </div>
                            </div>
                        </div>
                        <div class="widget-content widget-content-area">
                            <div class="table-responsive">
                                <table id="myTable" class="table table-hover" style="width:100%; font-size:14px;">
                                    <thead>
                                        <tr>
                                            <th>Bayi Kodu</th>
                                            <th>Ünvan</th>
                                            <th>Firma Adı</th>
                                            <th>Telefon</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://code.jquery.com/jquery-3.7.0.js"></script>

<script>
    var myDataTable;
    function initializeDataTable() {
        myDataTable = new DataTable('#myTable', {
            ajax: {
                url: '/BayiApi/BayiList',
                method: 'POST',
                dataSrc: '',
                error: function (xhr, error, thrown) {
                    if (xhr.status === 404) {
                        Swal.fire({
                            title: 'Veri alınamadı',
                            animation: false,
                            customClass: 'animated tada',
                            padding: '2em'
                        });
                    }
                    return false;
                }
            },
            columns: [
                { data: 'bayiKodu' },
                { data: 'unvan' },
                { data: 'kullaniciAdi' },
                { data: 'telefon' },
                {
                    data: 'id',
                    render: function (data, type, full, meta) {
                        return '<a href="/Bayi/Detay/' + data + '" class="btn btn-primary mb-2 mr-2 btn-rounded"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16"><path d = "M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8M1.173 8a13 13 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5s3.879 1.168 5.168 2.457A13 13 0 0 1 14.828 8q-.086.13-.195.288c-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5s-3.879-1.168-5.168-2.457A13 13 0 0 1 1.172 8z"/><path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5M4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0" /></svg></a>' + '<button type="button" onclick="sil(' + data + ')" class="btn btn-danger mb-2 mr-2 btn-rounded"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">< path d = "M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" /><path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" /></svg></button>'
                    }
                }
            ],
            language: {
                url: "//cdn.datatables.net/plug-ins/1.10.12/i18n/Turkish.json"
            },
            paging: false,
            scrollY: '33vh',
            scrollCollapse: true,
            ordering: false,
        });
    }
    function tabloGuncelle() {
        if (myDataTable) {
            myDataTable.destroy();
        }
        initializeDataTable();
    }
    $(document).ready(function () {
        initializeDataTable();
    })
    function sil(element) {
        swal.fire({
            title: 'Emin Misin?',
            text: "Kayıt Silinecek!",
            type: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Evet, Sil!',
            cancelButtonText: 'Hayır, Vazgeç!',
            reverseButtons: true,
            padding: '2em'
        }).then(function (result) {
            if (result.value) {
                submitForm(element);
            }
        })
    }
    function submitForm(element) {
        $.ajax({
            type: "POST",
            url: "/BayiApi/BayiSil/" + element,
            dataType: "json",
            success: function (result) {
                swal.fire({
                    title: result.status === "success" ? 'Başarılı!' : 'Başarısız!',
                    text: result.message,
                    type: result.status === "success" ? 'success' : 'warning',
                    confirmButtonText: 'Tamam'
                });
                tabloGuncelle();
            }
        });
    }
    function AddForm() {
        var formData = {
            Unvan: $("#Unvan").val(),
            KullaniciAdi: $("#KullaniciAdi").val(),
            Sifre: $("#Sifre").val(),
            Telefon: $("#Telefon").val(),
            EPosta: $("#EPosta").val(),
            Adres: $("#Adres").val(),
            Yetkili: $("#Yetkili").val(),
            BayiKodu: $("#BayiKodu").val(),
        };
        $.ajax({
            type: "POST",
            url: "/BayiApi/BayiEkle",
            data: formData,
            dataType: "json",
            success: function (result) {
                swal.fire({
                    title: result.status === "success" ? 'Başarılı!' : 'Başarısız!',
                    text: result.message,
                    type: result.status === "success" ? 'success' : 'warning',
                    confirmButtonText: 'Tamam'
                });
                if (result.status == "success") {
                    $("#Unvan").val('');
                    $("#KullaniciAdi").val('');
                    $("#Sifre").val('');
                    $("#Telefon").val('');
                    $("#EPosta").val('');
                    $("#Adres").val('');
                    $("#Yetkili").val('');
                    $("#BayiKodu").val('');
                    tabloGuncelle();
                }
            }
        });
    }
</script>