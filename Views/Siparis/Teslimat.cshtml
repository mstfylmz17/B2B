@using VNNB2B.Models.Hata
@{
    ViewData["Title"] = "Teslimat";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    string mesaj = ViewBag.hata;
    var hasError = !string.IsNullOrEmpty(ViewBag.hata);
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @if (hasError)
    {
        <script>
            $(document).ready(function () {
                Swal.fire({
                    icon: 'info',
                    title: '@mesaj'
                });
            });
        </script>
    }
    SiparisHata.Icerik = "";
}
<br />

<div class="card">
    <div class="card-header border-transparent">
        <div id="flStackForm" class="col-lg-12 layout-spacing layout-top-spacing">
            <div class="statbox widget box box-shadow">
                <div class="widget-header">
                    <div class="row">
                        <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                            <h4>Teslimat Oluştur</h4>
                        </div>
                    </div>
                </div>
                <div class="widget-content widget-content-area">
                    <table id="myTable" class="table table-bordered" style="width:100%; font-size:14px;">
                        <thead>
                            <tr style="background-color:#B17F2C">
                                <th style="width:9%;"><center>Sipariş No</center></th>
                                <th style="width:10%;"><center>Bayi Adı</center></th>
                                <th style="width:10%;"><center>Ürün Resmi</center></th>
                                <th style="width:6%;"><center>Ürün Kodu</center></th>
                                <th style="width:13%;"><center>Ürün Adı</center></th>
                                <th style="width:2%;"><center>Sipariş Adedi</center></th>
                                <th style="width:2%;"><center>Hazır Adet</center></th>
                                <th style="width:2%;"><center>Kalan Adet</center></th>
                                <th style="width:15%;"><center>Ahşap Rengi</center></th>
                                <th style="width:15%;"><center>Deri Rengi</center></th>
                                <th style="width:15%;"><center>Özel Not</center></th>
                                <th style="width:1%;"><center><i class="fas fa-check"></i></center></th>
                            </tr>
                        </thead>
                    </table>
                    <button onclick="uyari()" class="btn btn-primary mb-2 mr-2 btn-rounded" style="float:right;">Teslimat Oluştur</button>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://code.jquery.com/jquery-3.7.0.js"></script>

<script>
    var myDataTable;
    function initializeDataTable() {
        myDataTable = new DataTable('#myTable', {
            ajax: {
                url: '/SiparisApi/YukHazirList',
                method: 'POST',
                dataSrc: '',
                error: function (xhr, error, thrown) {
                    if (xhr.status === 404) {
                        Swal.fire({
                            title: 'Veri alınamadı',
                            animation: false,
                            customClass: 'animated tada',
                            padding: '2em'
                        });
                    }
                    return false;
                }
            },
            columns: [
                {
                    data: 'siparisID',
                    render: function (data, type, full, meta) {
                        return '<center>' + data + '</center>';
                    }
                },
                {
                    data: 'bayiID',
                    render: function (data, type, full, meta) {
                        return '<center>' + data + '</center>';
                    }
                },
                {
                    data: 'urunID',
                    render: function (data, type, full, meta) {
                        return '<center><img id="img_' + data + '" loading="lazy" class="img-thumbnail" style="width: 150px; height: 100px;" src="" /></center>';
                    }
                },
                {
                    data: 'urunKodu',
                    render: function (data, type, full, meta) {
                        return '<center>' + data + '</center>';
                    }
                },
                {
                    data: 'urunAciklama',
                    render: function (data, type, full, meta) {
                        return '<center>' + data + '</center>';
                    }
                },
                {
                    data: 'miktar',
                    render: function (data, type, full, meta) {
                        return '<center>' + data + '</center>';
                    }
                },
                {
                    data: 'hazirAdet',
                    render: function (data, type, full, meta) {
                        return '<center>' + data + '</center>';
                    }
                },
                {
                    data: 'teslimAdet',
                    render: function (data, type, full, meta) {
                        return '<center>' + data + '</center>';
                    }
                },
                {
                    data: 'ahsapRengi',
                    render: function (data, type, full, meta) {
                        return '<center>' + data + '</center>';
                    }
                },
                {
                    data: 'deriRengi',
                    render: function (data, type, full, meta) {
                        return '<center>' + data + '</center>';
                    }
                },
                {
                    data: 'aciklama',
                    render: function (data, type, full, meta) {
                        return '<center>' + data + '</center>';
                    }
                },
                {
                    data: 'id',
                    render: function (data, type, full, meta) {
                        return '<center><input style="width: 7px; height: 7px; transform: scale(4); " type="checkbox" class="select-checkbox" id="ch-' + data + '" value="' + data + '"></center>';
                    },
                    orderable: false
                },
            ],
            language: {
                url: "//cdn.datatables.net/plug-ins/1.10.12/i18n/Turkish.json"
            },
            paging: false,
            scrollY: '73vh',
            scrollCollapse: true,
            ordering: false,
            initComplete: function (settings, json) {
                loadImages();
            }
        });
        myDataTable.on('draw', function () {
            loadImages();
        });
    }
    function loadImages() {
        $('td img.img-thumbnail').each(function () {
            var imgElement = $(this);
            var id = imgElement.attr('id').split('_')[1];

            if (imgElement.attr('src') === '') {
                $.ajax({
                    url: '/UrunApi/GetResim',
                    method: 'POST',
                    data: { id: id },
                    xhrFields: {
                        responseType: 'blob' // Blob tipi ile yanıt alın
                    },
                    success: function (blob) {
                        var url = URL.createObjectURL(blob);
                        imgElement.attr('src', url); // Blob URL'yi kullanarak resmi yükle
                    }
                });
            }
        });
    }
    function tabloGuncelle() {
        if (myDataTable) {
            myDataTable.destroy();
        }
        initializeDataTable();
    }
    $(document).ready(function () {
        initializeDataTable();
    })
    function uyari() {
        swal.fire({
            title: 'Emin Misin?',
            text: "Seçilen Ürünler İçin Teslimat Belgesi Oluşturulacak!",
            type: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Evet, Oluştur!',
            cancelButtonText: 'Hayır, Vazgeç!',
            reverseButtons: true,
            padding: '2em'
        }).then(function (result) {
            if (result.value) {
                Gonder();
            }
        })
    }
    function Gonder() {
        var selectedIds = [];
        $('.select-checkbox:checked').each(function () {
            selectedIds.push($(this).val());
        });
        if (selectedIds.length > 0) {
            $.ajax({
                url: '/SiparisApi/TeslimatOlustur',
                method: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(selectedIds),
                success: function (result) {
                    swal.fire({
                        title: result.status === "success" ? 'Başarılı!' : 'Başarısız!',
                        text: result.message,
                        type: result.status === "success" ? 'success' : 'warning',
                        confirmButtonText: 'Tamam'
                    });
                    if (result.redirectUrl) {
                        window.location.href = result.redirectUrl;
                    }
                }
            });
        }
        else {
            Swal.fire({
                title: 'Uyarı',
                text: 'Lütfen en az bir ürün seçin.',
                icon: 'warning',
                confirmButtonText: 'Tamam'
            });
        }
    }
</script>