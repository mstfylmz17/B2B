<div class="modal fade" id="teslimatmodal">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Teslimat Bilgileri</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="widget-content widget-content-area">
                    <div class="table-responsive">
                        <table id="tesTable" class="table table-hover" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Teslimat No</th>
                                    <th>Bayi Adı</th>
                                    <th>Kayıt Tarihi</th>
                                    <th>Teslimat Miktarı</th>
                                    <th>Belge Durumu</th>
                                    <th></th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://code.jquery.com/jquery-3.7.0.js"></script>

<script>
    var satirid = 0;
    var teslimsatirid = 0;
    var myDataTable;
    var myDataTable2;
    function initializeDataTable() {
        myDataTable = new DataTable('#sepettable', {
            ajax: {
                url: '/SiparisApi/SiparisDetay/@id',
                method: 'POST',
                dataSrc: '',
                error: function (xhr, error, thrown) {
                    if (xhr.status === 404) {
                        Swal.fire({
                            title: 'Veri alınamadı',
                            animation: false,
                            customClass: 'animated tada',
                            padding: '2em'
                        });
                    }
                    return false;
                }
            },
            columns: [
                {
                    data: 'resim',
                    render: function (data, type, full, meta) {
                        return '<img src="' + data + '" class="img-thumbnail" style="width: 100px;" />';
                    }
                },
                {
                    data: 'urunKodu',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center; color:black;">' + data + '</div>';
                    }
                },
                {
                    data: 'urunAciklama',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center; color:black;">' + data + '</div>';
                    }
                },
                {
                    data: 'miktar',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center; color:black;">' + data + '</div>';
                    }
                },
                {
                    data: 'teslimAdet',
                    render: function (data, type, row, meta) {
                        if (data > 0) {
                            return '<div style="text-align: center; color:black;"><a href="#" data-toggle="modal" data-target="#teslimatmodal" onclick="TeslimatAc(' + row.id + ')">' + data + '</a></div>';
                        }
                        else {
                            return '<div style="text-align: center; color:black;">' + data + '</div>';
                        }
                    }
                },
                {
                    data: 'kalanMiktar',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center; color:black;">' + data + '</div>';
                    }
                },
                {
                    data: 'ahsapRengi',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center; color:black;">' + data + '</div>';
                    }
                },
                {
                    data: 'deriRengi',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center; color:black;">' + data + '</div>';
                    }
                },
                {
                    data: 'aciklama',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center; color:black;">' + data + '</div>';
                    }
                },
                {
                    data: 'birimFiyat',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center; color:black;">' + data + '</div>';
                    }
                },
                {
                    data: 'satirToplam',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center; color:black;">' + data + '</div>';
                    }
                },
            ],
            language: {
                url: "//cdn.datatables.net/plug-ins/1.10.12/i18n/Turkish.json"
            },
            ordering: false,
            searching: false,
            lengthChange: false,
            paging: false,
            info: false,
        });
    }
    function TeslimatAc(element) {
        teslimsatirid = element;
        if (myDataTable2) {
            myDataTable2.destroy();
        }
        myDataTable2 = new DataTable('#tesTable', {
            ajax: {
                url: '/SiparisApi/SeciliTeslimatList/' + element,
                method: 'POST',
                dataSrc: '',
                error: function (xhr, error, thrown) {
                    if (xhr.status === 404) {
                        Swal.fire({
                            title: 'Veri alınamadı',
                            animation: false,
                            customClass: 'animated tada',
                            padding: '2em'
                        });
                    }
                    return false;
                }
            },
            columns: [
                { data: 'teslimatNo' },
                { data: 'bayiID' },
                { data: 'kayitTarihi' },
                { data: 'miktar' },
                { data: 'tamamlanmaDurum' },
                {
                    data: 'id',
                    render: function (data, type, full, meta) {
                        return '<a href="/Siparis/TeslimatDetay/' + data + '" target="_blank" class="btn btn-primary btn-sm" ><i class="fas fa-eye"></i></a>';
                    },
                    orderable: false
                },
            ],
            language: {
                url: "//cdn.datatables.net/plug-ins/1.10.12/i18n/Turkish.json"
            },
            paging: false,
            scrollY: '73vh',
            scrollCollapse: true,
            ordering: false,
        });
    }
    function tabloGuncelle() {
        if (myDataTable) {
            myDataTable.destroy();
        }
        Bilgiler();
        initializeDataTable();
    }
    $(document).ready(function () {
        Bilgiler();
        initializeDataTable();
    })
    function Bilgiler() {
        $.ajax({
            type: "POST",
            url: "/SiparisApi/SiparisDetayBilgi",
            data: { id: @id },
            success: function (x) {
                $("#txttoplamadet").text(x.toplamAdet);
                $("#txtaratoplam").text(x.araToplam);
                $("#txtgeneltoplam").text(x.toplamTutar);
                $("#txtiskontotoplam").text(x.istoktoToplam);
                $("#txtkdvtoplam").text(x.kdvToplam);
                $("#txtsiparisno").text(x.siparisNo);
                $("#txtsiparistarihi").text(x.siparisTarihi);
                $("#txtsiparisdurum").text(x.siparisDurum);
                $("#txtkullanici").text(x.kullanici);
                $("#txtindirimlifiyat").text(x.indirimlifiyat);
                $("#txtunvan").text(x.unvan);
                $("#txtfirmaadi").text(x.firmaAdi);
                $("#txtyetkili").text(x.yetkili);
                $("#txttelefon").text(x.telefon);
                $("#txtadres").text(x.adres);
                $("#txttoplamparcaadet").text(x.toplamparcaadet);
                $("#txttoplamm3").text(x.toplamm3);
                $("#txttoplamkg").text(x.toplamkg);
                $('#filePreview').attr('src', x.dosyaYolu);
            }
        });
    }
</script>