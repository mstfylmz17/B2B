@using VNNB2B.Models.Hata
@{
    ViewData["Title"] = "Detay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    string mesaj = ViewBag.hata;
    var hasError = !string.IsNullOrEmpty(ViewBag.hata);
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @if (hasError)
    {
        <script>
            $(document).ready(function () {
                Swal.fire({
                    icon: 'info',
                    title: '@mesaj'
                });
            });
        </script>
    }
    SiparisHata.Icerik = "";
    int id = Convert.ToInt32(ViewBag.id);
}
<br />

<div class="row">
    <div class="col-12">
        <div class="invoice p-3 mb-3">
            @*Sipariş Detayları*@
            <div class="row">
                <div class="col-12">
                    <h4>
                        <i class="fas fa-file"></i> Sipariş Detayları
                        <small class="float-right" id="txtsiparistarihi"></small>
                    </h4>
                </div>
            </div>
            @*Cari Detayları*@
            <div class="row invoice-info">
                <div class="col-sm-4 invoice-col">
                    <h5>Müşteri Bilgileri</h5>
                    <b>Ünvan : </b><label id="txtunvan"></label>
                    <br />
                    <b>Firma Adı : </b><label id="txtfirmaadi"></label>
                    <br />
                    <b>Yetkili : </b><label id="txtyetkili"></label>
                    <br />
                    <b>Telefon : </b><label id="txttelefon"></label>
                    <br />
                    <b>Adres : </b><label id="txtadres"></label>
                    <br /><br />
                </div>
                <div class="col-sm-4 invoice-col">
                </div>
                <div class="col-sm-4 invoice-col">
                    <h5>Sipariş Bilgileri</h5>
                    <b>Sipariş No : </b><label id="txtsiparisno"></label>
                    <br>
                    <b>Sipariş Durumu : </b><label id="txtsiparisdurum"></label>
                    <br>
                </div>
            </div>
            @*Seçilen Ürünler Listesi*@
            <div class="row">
                <div class="col-12 table-responsive">
                    <table class="table table-striped" id="sepettable">
                        <thead>
                            <tr>
                                <th style="width:11%;">
                                    <center>
                                        Ürün Resmi
                                    </center>
                                </th>
                                <th style="width:10%;">
                                    <center>
                                        Ürün Kodu
                                    </center>
                                </th>
                                <th style="width:18%;">
                                    <center>
                                        Ürün Adı
                                    </center>
                                </th>
                                <th style="width:2%;"><center>Adet</center></th>
                                <th style="width:13%;"><center>Ahşap Rengi</center></th>
                                <th style="width:13%;"><center>Deri Rengi</center></th>
                                <th style="width:13%;">
                                    <center>
                                        Özel Not
                                    </center>
                                </th>
                                <th style="width:10%;">
                                    <center>
                                        Birim Fiyat
                                    </center>
                                </th>
                                <th style="width:10%;">
                                    <center>
                                        Toplam Fiyat
                                    </center>
                                </th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
            @*Sipariş Toplam Detayları*@
            <div class="row">
                <div class="col-6">
                </div>
                <div class="col-6">
                    <div class="table-responsive">
                        <table class="table" style="margin-top:20px;">
                            <tr>
                                <th style="width:50%">Ara Toplam</th>
                                <th id="txtaratoplam"></th>
                            </tr>
                            <tr>
                                <th>Bayi Iskonto %@ViewBag.iskonto</th>
                                <th id="txtiskontotoplam"></th>
                            </tr>
                            <tr>
                                <th>İndirimli Fiyat</th>
                                <th id="txtindirimlifiyat"></th>
                            </tr>
                            <tr>
                                <th>KDV Toplam %@ViewBag.kdv</th>
                                <th id="txtkdvtoplam"></th>
                            </tr>
                            <tr>
                                <th>Genel Toplam</th>
                                <th id="txtgeneltoplam"></th>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
            @*Buttonlar*@
            <div class="row no-print">
                <div class="col-12">
                    @* <a href="invoice-print.html" rel="noopener" target="_blank" class="btn btn-default"><i class="fas fa-print"></i> Print</a>
                    <button type="button" class="btn btn-success float-right">
                    <i class="far fa-credit-card"></i> Submit
                    Payment
                    </button>
                    <button type="button" class="btn btn-primary float-right" style="margin-right: 5px;">
                    <i class="fas fa-download"></i> Generate PDF
                    </button> *@
                </div>
            </div>
        </div>
    </div>
</div>

<link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://code.jquery.com/jquery-3.7.0.js"></script>

<script>
    var satirid = 0;
    var myDataTable;
    function initializeDataTable() {
        myDataTable = new DataTable('#sepettable', {
            ajax: {
                url: '/SiparisApi/SiparisDetay/@id',
                method: 'POST',
                dataSrc: '',
                error: function (xhr, error, thrown) {
                    if (xhr.status === 404) {
                        Swal.fire({
                            title: 'Veri alınamadı',
                            animation: false,
                            customClass: 'animated tada',
                            padding: '2em'
                        });
                    }
                    return false;
                }
            },
            columns: [
                {
                    data: 'resim',
                    render: function (data, type, full, meta) {
                        return '<img src="' + data + '" class="img-thumbnail" style="width: 100px;" />';
                    }
                },
                {
                    data: 'urunKodu',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center;">' + data + '</div>';
                    }
                },
                {
                    data: 'urunAciklama',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center;">' + data + '</div>';
                    }
                },
                {
                    data: 'miktar',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center;">' + data + '</div>';
                    }
                },
                {
                    data: 'ahsapRengi',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center;">' + data + '</div>';
                    }
                },
                {
                    data: 'deriRengi',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center;">' + data + '</div>';
                    }
                },
                {
                    data: 'aciklama',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center;">' + data + '</div>';
                    }
                },
                {
                    data: 'birimFiyat',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center;">' + data + '</div>';
                    }
                },
                {
                    data: 'satirToplam',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center;">' + data + '</div>';
                    }
                },
            ],
            language: {
                url: "//cdn.datatables.net/plug-ins/1.10.12/i18n/Turkish.json"
            },
            ordering: false,
            searching: false,
            lengthChange: false,
            paging: false,
            info: false,
        });
    }
    function tabloGuncelle() {
        if (myDataTable) {
            myDataTable.destroy();
        }
        Bilgiler();
        initializeDataTable();
    }
    $(document).ready(function () {
        Bilgiler();
        initializeDataTable();
    })
    function Bilgiler() {
        $.ajax({
            type: "POST",
            url: "/SiparisApi/SiparisDetayBilgi",
            data: { id: @id },
            success: function (x) {
                console.log(x);
                $("#txttoplamadet").text(x.toplamAdet);
                $("#txtaratoplam").text(x.araToplam);
                $("#txtgeneltoplam").text(x.toplamTutar);
                $("#txtiskontotoplam").text(x.istoktoToplam);
                $("#txtkdvtoplam").text(x.kdvToplam);
                $("#txtsiparisno").text(x.siparisNo);
                $("#txtsiparistarihi").text(x.siparisTarihi);
                $("#txtsiparisdurum").text(x.siparisDurum);
                $("#txtkullanici").text(x.kullanici);
                $("#txtindirimlifiyat").text(x.indirimlifiyat);
                $("#txtunvan").text(x.unvan);
                $("#txtfirmaadi").text(x.firmaAdi);
                $("#txtyetkili").text(x.yetkili);
                $("#txttelefon").text(x.telefon);
                $("#txtadres").text(x.adres);
            }
        });
    }
</script>