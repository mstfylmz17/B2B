@using VNNB2B.Models.Hata
@{
    ViewData["Title"] = "Detay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    string mesaj = ViewBag.hata;
    var hasError = !string.IsNullOrEmpty(ViewBag.hata);
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @if (hasError)
    {
        <script>
            $(document).ready(function () {
                Swal.fire({
                    icon: 'info',
                    title: '@mesaj'
                });
            });
        </script>
    }
    SiparisHata.Icerik = "";
    int id = Convert.ToInt32(ViewBag.id);
}
<br />

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-12 col-sm-12">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                <h4>Sipariş Detayları</h4>
                            </div>
                        </div>
                    </div>
                    <div style="font-size:14px;">
                        <table class="table table-bordered" id="sepettable">
                            <thead>
                                <tr>
                                    <th>
                                        Ürün Kodu
                                    </th>
                                    <th>
                                        Ürün Açıklama
                                    </th>
                                    <th>Adet</th>
                                    <th>Açıklama & Özellikler</th>
                                    <th>Satır Toplam</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
                <div class="col-12 col-sm-6">
                    <div class="card-body" style="font-size:12px; float:left;">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Sipariş No</th>
                                    <th id="txtsiparisno"></th>
                                </tr>
                                <tr>
                                    <th>Sipariş Tarihi</th>
                                    <th id="txtsiparistarihi"></th>
                                </tr>
                                <tr>
                                    <th>Sipariş Durumu</th>
                                    <th id="txtsiparisdurum"></th>
                                </tr>
                                <tr>
                                    <th>Onaylayan Kullanıcı</th>
                                    <th id="txtkullanici"></th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
                <div class="col-12 col-sm-6">
                    <div class="card-body" style="font-size:12px; float:right;">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Toplam Sipariş Adedi</th>
                                    <th id="txttoplamadet"></th>
                                </tr>
                                <tr>
                                    <th>Ara Toplam</th>
                                    <th id="txtaratoplam"></th>
                                </tr>
                                <tr>
                                    <th>Iskonto Toplam %@ViewBag.iskonto</th>
                                    <th id="txtiskontotoplam"></th>
                                </tr>
                                <tr>
                                    <th>KDV Toplam %@ViewBag.kdv</th>
                                    <th id="txtkdvtoplam"></th>
                                </tr>
                                <tr>
                                    <th>Genel Toplam</th>
                                    <th id="txtgeneltoplam"></th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://code.jquery.com/jquery-3.7.0.js"></script>

<script>
    var satirid = 0;
    var myDataTable;
    function initializeDataTable() {
        myDataTable = new DataTable('#sepettable', {
            ajax: {
                url: '/SiparisApi/SiparisDetay/@id',
                method: 'POST',
                dataSrc: '',
                error: function (xhr, error, thrown) {
                    if (xhr.status === 404) {
                        Swal.fire({
                            title: 'Veri alınamadı',
                            animation: false,
                            customClass: 'animated tada',
                            padding: '2em'
                        });
                    }
                    return false;
                }
            },
            columns: [
                { data: 'urunKodu' },
                { data: 'urunAciklama' },
                { data: 'miktar' },
                { data: 'aciklama' },
                { data: 'satirToplam' }
            ],
            language: {
                url: "//cdn.datatables.net/plug-ins/1.10.12/i18n/Turkish.json"
            },
            ordering: false,
            searching: false,
            lengthChange: false,
            paging: false,
            info: false,
        });
    }
    function tabloGuncelle() {
        if (myDataTable) {
            myDataTable.destroy();
        }
        Bilgiler();
        initializeDataTable();
    }
    $(document).ready(function () {
        Bilgiler();
        initializeDataTable();
    })
    function Bilgiler() {
        $.ajax({
            type: "POST",
            url: "/SiparisApi/SiparisDetayBilgi",
            data: { id: @id },
            success: function (x) {
                console.log(x);
                $("#txttoplamadet").text(x.toplamAdet);
                $("#txtaratoplam").text(x.araToplam);
                $("#txtgeneltoplam").text(x.toplamTutar);
                $("#txtiskontotoplam").text(x.istoktoToplam);
                $("#txtkdvtoplam").text(x.kdvToplam);
                $("#txtsiparisno").text(x.siparisNo);
                $("#txtsiparistarihi").text(x.siparisTarihi);
                $("#txtsiparisdurum").text(x.siparisDurum);
                $("#txtkullanici").text(x.kullanici);
            }
        });
    }
</script>