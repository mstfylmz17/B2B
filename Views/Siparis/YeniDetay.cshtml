    } 
    function modalac() {

        if (myDataTable2) {
            myDataTable2.destroy();
        }

        myDataTable2 = new DataTable('#myTable2', {
            ajax: {
                url: '/UrunApi/KategoriUrunleriList',
                method: 'POST',
                dataSrc: '',
                error: function (xhr, error, thrown) {
                    if (xhr.status === 404) {
                        Swal.fire({
                            title: 'Veri alınamadı',
                            animation: false,
                            customClass: 'animated tada',
                            padding: '2em'
                        });
                    }
                    return false;
                }
            },
            columns: [
                {
                    data: 'id',
                    render: function (data, type, full, meta) {
                        return '<center><img id="img_' + data + '" loading="lazy" class="img-thumbnail" style="width: 150px; height: 100px;" src="" /></center>';
                    }
                },
                {
                    data: 'urunKategori',
                    render: function (data, type, full, meta) {
                        return '<center>' + data + '</center>';
                    }
                },
                {
                    data: 'urunKodu',
                    render: function (data, type, full, meta) {
                        return '<center>' + data + '</center>';
                    }
                },
                {
                    data: 'urunAdi',
                    render: function (data, type, full, meta) {
                        return '<center>' + data + '</center>';
                    }
                },
                {
                    data: 'stokMiktari',
                    render: function (data, type, full, meta) {
                        return '<center>' + data + '</center>';
                    }
                },
                {
                    data: 'id',
                    render: function (data, type, full, meta) {
                        return '<center><a href="#" onclick="openProductModal(' + data + ')" class="btn btn-success mb-2 mr-2 btn-rounded btn-sm"><i class="fas fa-check-circle"></i></a></center>'
                    }
                }
            ],
            language: {
                url: "//cdn.datatables.net/plug-ins/1.10.12/i18n/Turkish.json"
            },
            lengthChange: false,
            paging: false,
            info: false,
            initComplete: function (settings, json) {
                loadImages();
            }
        });

        myDataTable2.on('draw', function () {
            loadImages();
        });
    }
    function loadImages() {
        $('td img.img-thumbnail').each(function () {
            var imgElement = $(this);
            var imgId = imgElement.attr('id');

            if (imgId && imgId.includes('_')) {
                var id = imgId.split('_')[1];

                if (imgElement.attr('src') === '') {
                    $.ajax({
                        url: '/UrunApi/GetResim',
                        method: 'POST',
                        data: { id: id },
                        xhrFields: {
                            responseType: 'blob'
                        },
                        success: function (blob) {
                            var url = URL.createObjectURL(blob);
                            imgElement.attr('src', url);
                        }
                    });
                }
            }
        });
    }
    function SatirNo(element) {
        satirid = element;
        AddForm();
    }
    function tabloGuncelle() {
        if (myDataTable) {
            myDataTable.destroy();
        }
        if (myDataTable2) {
            myDataTable2.destroy();
        }
        Bilgiler();
        initializeDataTable();
        location.reload();
    }
