                {
                    data: 'resim',
                    render: function (data, type, full, meta) {
                        return '<center><img src="' + data + '" class="img-thumbnail" style="width: 100px;" /></center>';
                    }
                },
                {
                    data: 'urunKodu',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center; color:black;">' + data + '</div>';
                    }
                },
                {
                    data: 'urunAciklama',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center; color:black;">' + data + '</div>';
                    }
                },
                {
                    data: 'id',
                    render: function (data, type, row, meta) {
                        return '<input type="number" style="text-align:center; width: 100%; box-sizing: border-box; background:white; color:black; padding: 4px; margin: 0;" class="form-control" id="mik-' + data + '" value="' + row.miktar + '">';
