@using VNNB2B.Models.Hata
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    string mesaj = ViewBag.hata;
    var hasError = !string.IsNullOrEmpty(ViewBag.hata);
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @if (hasError)
    {
        <script>
            $(document).ready(function () {
                Swal.fire({
                    icon: 'info',
                    title: '@mesaj'
                });
            });
        </script>
    }
    TedarikciHata.Icerik = "";
}
<br />
<div class="row">
    <div class="col-3">
        <div class="card" style="background-color:#94723C; color:black;">
            <div class="card-header border-transparent">
                <div id="flStackForm" class="col-lg-12 layout-spacing layout-top-spacing">
                    <div class="statbox widget box box-shadow">
                        <div class="widget-header">
                            <div class="row">
                                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                    <h4>Tedarikçi Ekle</h4>
                                </div>
                            </div>
                        </div>
                        <div class="widget-content widget-content-area">
                            <form>
                                <label style="margin-top:10px; margin-bottom:-5px;">Fatura Ünvanı <span style="color:darkred;">*</span></label>
                                <input type="text" class="form-control" id="Unvan" aria-describedby="emailHelp1">
                                <label style="margin-top:10px; margin-bottom:-5px;">Tedarikçi Kodu <span style="color:darkred;">*</span></label>
                                <input type="text" class="form-control" id="TedarikciKodu" aria-describedby="emailHelp1">
                                <label style="margin-top:10px; margin-bottom:-5px;">Firma Adı <span style="color:darkred;">*</span></label>
                                <input type="text" class="form-control" id="FirmaAdi" aria-describedby="emailHelp1">
                                <label style="margin-top:10px; margin-bottom:-5px;">Yetkili <span style="color:darkred">*</span></label>
                                <input type="text" class="form-control" id="Yetkili" aria-describedby="emailHelp1">
                                <label style="margin-top:10px; margin-bottom:-5px;">Telefon <span style="color:darkred;">*</span></label>
                                <input type="text" class="form-control" id="Telefon" aria-describedby="emailHelp1">
                                <label style="margin-top:10px; margin-bottom:-5px;">E-Posta Adresi <span style="color:darkred">*</span></label>
                                <input type="text" class="form-control" id="EPosta" aria-describedby="emailHelp1">
                                <label style="margin-top:10px; margin-bottom:-5px;">Vergi Dairesi <span style="color:darkred">*</span></label>
                                <input type="text" class="form-control" id="VergiDairesi" aria-describedby="emailHelp1">
                                <label style="margin-top:10px; margin-bottom:-5px;">Vergi No <span style="color:darkred">*</span></label>
                                <input type="text" class="form-control" id="VergiNo" aria-describedby="emailHelp1">
                                <label style="margin-top:10px; margin-bottom:-5px;">Adres <span style="color:darkred">*</span></label>
                                <input type="text" class="form-control" id="Adres" aria-describedby="emailHelp1">
                                <button type="button" onclick="AddForm()" class="btn btn-primary mt-3">Kaydet</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-9">
        <div class="card">
            <div class="card-header border-transparent">
                <div id="flStackForm" class="col-lg-12 layout-spacing layout-top-spacing">
                    <div class="statbox widget box box-shadow">
                        <div class="widget-header">
                            <div class="row">
                                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                    <h4>Tedarikçiler</h4>
                                </div>
                            </div>
                        </div>
                        <div class="widget-content widget-content-area">
                            <div class="table-responsive">
                                <table id="myTable" class="table table-hover" style="width:100%; font-size:14px;">
                                    <thead>
                                        <tr>
                                            <th>Tedarikçi Kodu</th>
                                            <th>Ünvan</th>
                                            <th>Firma Adı</th>
                                            <th>Telefon</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://code.jquery.com/jquery-3.7.0.js"></script>

<script>
    var myDataTable;
    function initializeDataTable() {
        myDataTable = new DataTable('#myTable', {
            ajax: {
                url: '/TedarikciApi/TedarikciList',
                method: 'POST',
                dataSrc: '',
                error: function (xhr, error, thrown) {
                    if (xhr.status === 404) {
                        Swal.fire({
                            title: 'Veri alınamadı',
                            animation: false,
                            customClass: 'animated tada',
                            padding: '2em'
                        });
                    }
                    return false;
                }
            },
            columns: [
                { data: 'tedarikciKodu', width: '15%' },
                { data: 'unvan', width: '40%' },
                { data: 'firmaAdi', width: '15%' },
                { data: 'telefon', width: '15%' },
                {
                    data: 'id', width: '15%',
                    render: function (data, type, full, meta) {
                        return '<a href="/Tedarikci/Detay/' + data + '" class="btn btn-primary mb-2 mr-2 btn-rounded"><i class="fas fa-eye"></i></a>' + '<button type="button" onclick="sil(' + data + ')" class="btn btn-danger mb-2 mr-2 btn-rounded"><i class="fas fa-trash"></i></button>'
                    }
                }
            ],
            language: {
                url: "//cdn.datatables.net/plug-ins/1.10.12/i18n/Turkish.json"
            },
            paging: false,
            scrollY: '75vh',
            scrollCollapse: true,
            ordering: false,
        });
    }
    function tabloGuncelle() {
        if (myDataTable) {
            myDataTable.destroy();
        }
        initializeDataTable();
    }
    $(document).ready(function () {
        initializeDataTable();
    })
    function sil(element) {
        swal.fire({
            title: 'Emin Misin?',
            text: "Kayıt Silinecek!",
            type: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Evet, Sil!',
            cancelButtonText: 'Hayır, Vazgeç!',
            reverseButtons: true,
            padding: '2em'
        }).then(function (result) {
            if (result.value) {
                submitForm(element);
            }
        })
    }
    function submitForm(element) {
        $.ajax({
            type: "POST",
            url: "/TedarikciApi/TedarikciSil/" + element,
            dataType: "json",
            success: function (result) {
                swal.fire({
                    title: result.status === "success" ? 'Başarılı!' : 'Başarısız!',
                    text: result.message,
                    type: result.status === "success" ? 'success' : 'warning',
                    confirmButtonText: 'Tamam'
                });
                tabloGuncelle();
            }
        });
    }
    function AddForm() {
        var formData = {
            Unvan: $("#Unvan").val(),
            AddForm: $("Adres").val(),
            VergiDairesi: $("#VergiDairesi").val(),
            VergiNo: $("#VergiNo").val(),
            Telefon: $("#Telefon").val(),
            EPosta: $("#EPosta").val(),
            Yetkili: $("#Yetkili").val(),
            TedarikciKodu: $("#TedarikciKodu").val(),
            FirmaAdi: $("#FirmaAdi").val(),
        };
        $.ajax({
            type: "POST",
            url: "/TedarikciApi/TedarikciEkle",
            data: formData,
            dataType: "json",
            success: function (result) {
                swal.fire({
                    title: result.status === "success" ? 'Başarılı!' : 'Başarısız!',
                    text: result.message,
                    type: result.status === "success" ? 'success' : 'warning',
                    confirmButtonText: 'Tamam'
                });
                $("#Unvan").val('');
                $("#VergiDairesi").val('');
                $("#VergiNo").val('');
                $("#Telefon").val('');
                $("#EPosta").val('');
                $("#Yetkili").val('');
                $("#TedarikciKodu").val('');
                $("#FirmaAdi").val('');
                $("#Adres").val('');
                tabloGuncelle();
            }
        });
    }
</script>