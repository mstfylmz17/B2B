@using VNNB2B.Models.Hata
@inject IHttpContextAccessor HttpContextAccessor
@using DataAccessLayer.Concrate
@{
    ViewData["Title"] = "Sepet";
    Layout = "~/Views/Shared/_Bayi.cshtml";
}

@{
    string mesaj = ViewBag.hata;
    var hasError = !string.IsNullOrEmpty(ViewBag.hata);
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @if (hasError)
    {
        <script>
            $(document).ready(function () {
                Swal.fire({
                    icon: 'info',
                    title: '@mesaj'
                });
            });
        </script>
    }
    string cerez;
    HttpContextAccessor.HttpContext.Request.Cookies.TryGetValue("VNNBayiCerez", out cerez);
    int bayiid = Convert.ToInt32(cerez);
    BLoginHata.Icerik = "";
}

<style>
    table.table-tab {
        border-collapse: collapse;
        width: 100%;
    }

        table.table-tab th, table.table-tab td {
            border: 2px double #B17F2C;
        }

        table.table-tab th {
            background-color: #f8f9fa;
            color: #B17F2C;
            border-top: 2px solid #B17F2C;
        }

        table.table-tab td {
            background-color: white;
            color: #B17F2C;
        }

        table.table-tab thead th {
            border-top: 2px solid #B17F2C;
        }

    table.dataTable tbody tr {
        height: 25px;
    }

    table.dataTable tbody td {
        line-height: 25px;
        vertical-align: middle;
    }
</style>

<div class="content-header">
    <div class="container">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">
                    <small>
                        Sepet / Shopping Cart
                    </small>
                </h1>
            </div>
        </div>
    </div>
</div>

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-12 col-sm-12">
                    <div class="card-body" style="font-size:16px;">
                        <table class=" table-tab" style="width:100%;">
                            <thead>
                                <tr>
                                    <th>SİPARİŞ NO / ORDER NO</th>
                                    <th id="txtsiparisno"></th>
                                </tr>
                                <tr>
                                    <th>SİPARİŞ TARİHİ / ORDER DATE</th>
                                    <th id="txtsiparistarihi"></th>
                                </tr>
                                <tr>
                                    <th>SİPARİŞ DURUMU / ORDER STATUS</th>
                                    <th id="txtsiparisdurum"></th>
                                </tr>
                                <tr>
                                    <th>ONAYLAYAN YETKİLİ / APPROVING AUTHORITY</th>
                                    <th id="txtkullanici"></th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
                <div class="col-12 col-sm-12">
                    <div style="font-size:12px;">
                        <table class="table table-bordered" id="sepettable">
                            <thead>
                                <tr style="background-color:#B17F2C">
                                    <th style="width:15%;">
                                        <center>
                                            Ürün Resmi <br /> Product Image
                                        </center>
                                    </th>
                                    <th style="width:5%;">
                                        <center>
                                            Ürün Kodu <br /> Product Kode
                                        </center>
                                    </th>
                                    <th style="width:10%;">
                                        <center>
                                            Ürün Adı <br /> Product Name
                                        </center>
                                    </th>
                                    <th style="width:5%;"><center>Adet <br /> Amount</center></th>
                                    <th style="width:13%;"><center>Ahşap Rengi <br /> Wood Color</center></th>
                                    <th style="width:13%;"><center>Deri Rengi <br /> Skin Color</center></th>
                                    <th style="width:13%;">
                                        <center>
                                            Özel Not
                                            <br />
                                            Special Note
                                        </center>
                                    </th>
                                    <th style="width:9%;">
                                        <center>
                                            Birim Fiyat <br />
                                            Unit Price
                                        </center>
                                    </th>
                                    <th style="width:9%;">
                                        <center>
                                            Toplam Fiyat<br />
                                            Total Price
                                        </center>
                                    </th>
                                    <th style="width:8%;"></th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
                <div class="col-12">
                    <div class="row">
                        <div class="col-6"></div>
                        <div class="col-6">
                            <div class="card-body">
                                <table class="table-tab">
                                    <thead>
                                        <tr>
                                            <th style="width:50%;">TOPLAM SİPARİŞ ADEDİ</th>
                                            <th style="width:50%; text-align: center;" id="txttoplamadet"></th>
                                        </tr>
                                        <tr>
                                            <th style="width:50%;">ARA TOPLAM</th>
                                            <th style="width:50%; text-align: center;" id="txtaratoplam"></th>
                                        </tr>
                                        <tr>
                                            <th style="width:50%;">BAYİ İSKONTO %@ViewBag.iskonto</th>
                                            <th style="width:50%; text-align: center;" id="txtiskontotoplam"></th>
                                        </tr>
                                        <tr>
                                            <th style="width:50%; background-color:lightgray;">İNDİRİMLİ FİYAT</th>
                                            <th style="width:50%; background-color:lightgray; text-align: center;" id="txtindirimlifiyat"></th>
                                        </tr>
                                        <tr>
                                            <th style="width:50%; background-color:lightgray;">KDV TOPLAM %@ViewBag.kdv</th>
                                            <th style="width:50%; background-color:lightgray; text-align: center;" id="txtkdvtoplam"></th>
                                        </tr>
                                        <tr>
                                            <th style="width:50%; background-color:lightgray;">GENEL TOPLAM</th>
                                            <th style="width:50%; background-color:lightgray; text-align: center;" id="txtgeneltoplam"></th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                            <button onclick="SepetOnay()" class="btn btn-success btn-xs" style="float:right;"><i class="fas fa-check"></i> Sepeti Onayla / Confirm Cart</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://code.jquery.com/jquery-3.7.0.js"></script>

<script>
    var satirid = 0;
    var myDataTable;
    function initializeDataTable() {
        myDataTable = new DataTable('#sepettable', {
            ajax: {
                url: '/SiparisApi/SepetList/@bayiid',
                method: 'POST',
                dataSrc: '',
                error: function (xhr, error, thrown) {
                    if (xhr.status === 404) {
                        Swal.fire({
                            title: 'Veri alınamadı',
                            animation: false,
                            customClass: 'animated tada',
                            padding: '2em'
                        });
                    }
                    return false;
                }
            },
            columns: [
                {
                    data: 'resim',
                    render: function (data, type, full, meta) {
                        return '<img src="' + data + '" class="img-thumbnail" style="width: 100px;" />';
                    }
                },
                {
                    data: 'urunKodu',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center;">' + data + '</div>';
                    }
                },
                {
                    data: 'urunAciklama',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center;">' + data + '</div>';
                    }
                },
                {
                    data: 'id',
                    render: function (data, type, row, meta) {
                        return '<input type="number" style="text-align:center; width: 100%; box-sizing: border-box; padding: 4px; margin: 0;" class="miktar-input" id="mik-' + data + '" placeholder="' + row.miktar + '">';
                    }
                },
                {
                    data: 'ahsapRengi',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center;">' + data + '</div>';
                    }
                },
                {
                    data: 'deriRengi',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center;">' + data + '</div>';
                    }
                },
                {
                    data: 'aciklama',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center;">' + data + '</div>';
                    }
                },
                {
                    data: 'birimFiyat',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center;">' + data + '</div>';
                    }
                },
                {
                    data: 'satirToplam',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center;">' + data + '</div>';
                    }
                },
                {
                    data: 'id',
                    render: function (data, type, full, meta) {
                        return '<div class="row"><div class="col-6"><button class="btn btn-info btn-xs" style="margin-right:2px; float:left;" type="button" onclick="SatirNo(' + data + ')"><i class="fas fa-edit"></i></a></div>' + '<div class="col-6"><button type="button" onclick="sil(' + data + ')" style="float:right;" class="btn btn-danger btn-xs"><i class="fas fa-trash"></i></button></div></div>'
                    }
                }
            ],
            ordering: false,
            language: {
                url: "//cdn.datatables.net/plug-ins/1.10.12/i18n/Turkish.json"
            },
            searching: false,
            lengthChange: false,
            paging: false,
            info: false,
        });
    }
    function SatirNo(element) {
        satirid = element;
        AddForm();
    }
    function tabloGuncelle() {
        if (myDataTable) {
            myDataTable.destroy();
        }
        Bilgiler();
        initializeDataTable();
    }
    $(document).ready(function () {
        Bilgiler();
        initializeDataTable();
    })
    function sil(element) {
        swal.fire({
            title: 'Emin Misin?',
            text: "Kayıt Silinecek!",
            type: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Evet, Sil!',
            cancelButtonText: 'Hayır, Vazgeç!',
            reverseButtons: true,
            padding: '2em'
        }).then(function (result) {
            if (result.value) {
                submitForm(element);
            }
        })
    }
    function submitForm(element) {
        $.ajax({
            type: "POST",
            url: "/SiparisApi/SepetSil/" + element,
            dataType: "json",
            success: function (result) {
                swal.fire({
                    title: result.status === "success" ? 'Başarılı!' : 'Başarısız!',
                    text: result.message,
                    type: result.status === "success" ? 'success' : 'warning',
                    confirmButtonText: 'Tamam'
                });
                tabloGuncelle();
            }
        });
    }
    function AddForm() {
        var element = satirid;
        var formData = {
            ID: element,
            Miktar: $("#mik-" + element).val(),
        };
        $.ajax({
            type: "POST",
            url: '/SiparisApi/SepetGuncelle',
            data: formData,
            dataType: "json",
            success: function (result) {
                swal.fire({
                    title: result.status === "success" ? 'Başarılı!' : 'Başarısız!',
                    text: result.message,
                    type: result.status === "success" ? 'success' : 'warning',
                    confirmButtonText: 'Tamam'
                });
                tabloGuncelle();
            }
        });
    }
    function SepetOnay() {
        swal.fire({
            title: 'Emin Misin?',
            text: "Sipariş Onaylanacak!",
            type: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Evet, Onayla!',
            cancelButtonText: 'Hayır, Vazgeç!',
            reverseButtons: true,
            padding: '2em'
        }).then(function (result) {
            if (result.value) {
                SepetOnayPost();
            }
        })
    }
    function SepetOnayPost() {
        var formData = {
            id: @bayiid,
        };
        $.ajax({
            type: "POST",
            url: '/SiparisApi/SiparisOnay',
            data: formData,
            dataType: "json",
            success: function (result) {
                swal.fire({
                    title: result.status === "success" ? 'Başarılı!' : 'Başarısız!',
                    text: result.message,
                    type: result.status === "success" ? 'success' : 'warning',
                    confirmButtonText: 'Tamam'
                });
                tabloGuncelle();
            }
        });
    }
    function Bilgiler() {
        $.ajax({
            type: "POST",
            url: "/SiparisApi/SepetIcerik",
            data: { id: @cerez },
            success: function (x) {
                console.log(x);
                $("#txttoplamadet").text(x.toplamAdet);
                $("#txtaratoplam").text(x.araToplam);
                $("#txtgeneltoplam").text(x.toplamTutar);
                $("#txtiskontotoplam").text(x.istoktoToplam);
                $("#txtindirimlifiyat").text(x.indirimlifiyat);
                $("#txtkdvtoplam").text(x.kdvToplam);
                $("#txtsiparisno").text(x.siparisNo);
                $("#txtsiparistarihi").text(x.siparisTarihi);
                $("#txtsiparisdurum").text(x.siparisDurum);
                $("#txtkullanici").text(x.kullanici);
            }
        });
    }
</script>