@using VNNB2B.Models.Hata
@inject IHttpContextAccessor HttpContextAccessor
@using DataAccessLayer.Concrate
@{
    ViewData["Title"] = "Sepet";
    Layout = "~/Views/Shared/_Bayi.cshtml";
}

@{
    string mesaj = ViewBag.hata;
    var hasError = !string.IsNullOrEmpty(ViewBag.hata);
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @if (hasError)
    {
        <script>
            $(document).ready(function () {
                Swal.fire({
                    icon: 'info',
                    title: '@mesaj'
                });
            });
        </script>
    }
    string cerez;
    HttpContextAccessor.HttpContext.Request.Cookies.TryGetValue("VNNBayiCerez", out cerez);

    int bayiid = Convert.ToInt32(cerez);
    BLoginHata.Icerik = "";
}

<div class="content-header">
    <div class="container">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0"><small>Sepet</small></h1>
            </div>
        </div>
    </div>
</div>
<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <center><h6 id="sepetyok" style="display:none;">Sepetinizde Ürün Bulunamadı!</h6></center>
            <div id="sepet">
                <div class="card-header">
                    <h3 class="card-title">Sepet İçeriğiniz</h3>
                </div>
                <div class="card-body">
                    <table class="table table-bordered" id="sepettable">
                        <thead>
                            <tr>
                                <th>Ürün Kodu</th>
                                <th>Ürün Açıklama</th>
                                <th>Miktar</th>
                                <th>Açıklama</th>
                                <th></th>
                            </tr>
                        </thead>
                    </table>
                    <div class="footer" style="margin-top:10px;">
                        <button onclick="SepetOnay()" class="btn btn-success btn-sm" style="float:right;"><i class="fas fa-check"></i> Sepeti Onayla</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://code.jquery.com/jquery-3.7.0.js"></script>

<script>
    var satirid = 0;
    var myDataTable;
    function initializeDataTable() {
        myDataTable = new DataTable('#sepettable', {
            ajax: {
                url: '/SiparisApi/SepetList/@bayiid',
                method: 'POST',
                dataSrc: function (json) {
                    let dataCount = 0;
                    if (Array.isArray(json)) {
                        dataCount = json.length;
                    }
                    else if (json.data && Array.isArray(json.data)) {
                        dataCount = json.data.length;
                    }
                    if (dataCount == 0) {
                        document.getElementById('sepetyok').style.display = 'block';
                        document.getElementById('sepet').style.display = 'none';
                    }
                    else {
                        document.getElementById('sepetyok').style.display = 'none';
                        document.getElementById('sepet').style.display = 'block';
                    }
                    return json.data ? json.data : json;
                },
                error: function (xhr, error, thrown) {
                    if (xhr.status === 404) {
                        Swal.fire({
                            title: 'Veri alınamadı',
                            animation: false,
                            customClass: 'animated tada',
                            padding: '2em'
                        });
                    }
                    return false;
                }
            },
            columns: [
                { data: 'urunKodu' },
                { data: 'urunAciklama' },
                {
                    data: 'id',
                    render: function (data, type, row, meta) {
                        return '<input type="number" class="form-control miktar-input" id="mik-' + data + '" placeholder="' + row.miktar + '">';
                    }
                },
                { data: 'aciklama' },
                {
                    data: 'id',
                    render: function (data, type, full, meta) {
                        return '<button class="btn btn-info btn-sm" style="margin-right:2px;" type="button" onclick="SatirNo(' + data + ')"><i class="fas fa-edit"></i></a>' + '<button type="button" onclick="sil(' + data + ')" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></button>'
                    }
                }
            ],
            language: {
                url: "//cdn.datatables.net/plug-ins/1.10.12/i18n/Turkish.json"
            },
            ordering: false,
            searching: false,
            lengthChange: false,
            paging: false,
            info: false,
        });
    }
    function SatirNo(element) {
        satirid = element;
        AddForm();
    }
    function tabloGuncelle() {
        if (myDataTable) {
            myDataTable.destroy();
        }
        initializeDataTable();
    }
    $(document).ready(function () {
        initializeDataTable();
    })
    function sil(element) {
        swal.fire({
            title: 'Emin Misin?',
            text: "Kayıt Silinecek!",
            type: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Evet, Sil!',
            cancelButtonText: 'Hayır, Vazgeç!',
            reverseButtons: true,
            padding: '2em'
        }).then(function (result) {
            if (result.value) {
                submitForm(element);
            }
        })
    }
    function submitForm(element) {
        $.ajax({
            type: "POST",
            url: "/SiparisApi/SepetSil/" + element,
            dataType: "json",
            success: function (result) {
                swal.fire({
                    title: result.status === "success" ? 'Başarılı!' : 'Başarısız!',
                    text: result.message,
                    type: result.status === "success" ? 'success' : 'warning',
                    confirmButtonText: 'Tamam'
                });
                tabloGuncelle();
            }
        });
    }
    function AddForm() {
        var element = satirid;
        var formData = {
            ID: element,
            Miktar: $("#mik-" + element).val(),
        };
        $.ajax({
            type: "POST",
            url: '/SiparisApi/SepetGuncelle',
            data: formData,
            dataType: "json",
            success: function (result) {
                swal.fire({
                    title: result.status === "success" ? 'Başarılı!' : 'Başarısız!',
                    text: result.message,
                    type: result.status === "success" ? 'success' : 'warning',
                    confirmButtonText: 'Tamam'
                });
                tabloGuncelle();
            }
        });
    }
    function SepetOnay() {
        swal.fire({
            title: 'Emin Misin?',
            text: "Sipariş Onaylanacak!",
            type: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Evet, Onayla!',
            cancelButtonText: 'Hayır, Vazgeç!',
            reverseButtons: true,
            padding: '2em'
        }).then(function (result) {
            if (result.value) {
                SepetOnayPost();
            }
        })
    }
    function SepetOnayPost() {
        var formData = {
            id: @bayiid,
        };
        $.ajax({
            type: "POST",
            url: '/SiparisApi/SiparisOnay',
            data: formData,
            dataType: "json",
            success: function (result) {
                swal.fire({
                    title: result.status === "success" ? 'Başarılı!' : 'Başarısız!',
                    text: result.message,
                    type: result.status === "success" ? 'success' : 'warning',
                    confirmButtonText: 'Tamam'
                });
                tabloGuncelle();
            }
        });
    }
</script>