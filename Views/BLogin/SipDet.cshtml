<script>
    var satirid = 0;
    var myDataTable;
    var myDataTable2;
    function initializeDataTable() {
        myDataTable = new DataTable('#sepettable', {
            ajax: {
                url: '/SiparisApi/SiparisDetay/@id',
                method: 'POST',
                dataSrc: '',
                error: function (xhr, error, thrown) {
                    if (xhr.status === 404) {
                        Swal.fire({
                            title: 'Veri alınamadı',
                            animation: false,
                            customClass: 'animated tada',
                            padding: '2em'
                        });
                    }
                    return false;
                }
            },
            columns: [
                {
                    data: 'resim',
                    render: function (data, type, full, meta) {
                        return '<center><img src="' + data + '" class="img-thumbnail" style="width: 100px;" /></center>';
                    }
                },
                {
                    data: 'urunKodu',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center;">' + data + '</div>';
                    }
                },
                {
                    data: 'urunAciklama',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center;">' + data + '</div>';
                    }
                },
                {
                    data: 'miktar',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center;">' + data + '</div>';
                    }
                },
                {
                    data: 'teslimAdet',
                    render: function (data, type, row, meta) {
                        if (data > 0) {
                            return '<div style="text-align: center; font-size:20px; color:black;"><a href="#" data-toggle="modal" data-target="#teslimatmodal" onclick="TeslimatAc(' + row.id + ')"><span class="right badge badge-danger">' + data + '</span></a></div>';
                        }
                        else {
                            return '<div style="text-align: center; color:black;">' + data + '</div>';
                        }
                    }
                },
                {
                    data: 'kalanMiktar',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center; color:black;">' + data + '</div>';
                    }
                },
                {
                    data: 'ahsapRengi',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center;">' + data + '</div>';
                    }
                },
                {
                    data: 'deriRengi',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center;">' + data + '</div>';
                    }
                },
                {
                    data: 'aciklama',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center;">' + data + '</div>';
                    }
                },
                {
                    data: 'birimFiyat',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center;">' + data + '</div>';
                    }
                },
                {
                    data: 'indirimFiyat',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center;">' + data + '</div>';
                    }
                },
                {
                    data: 'satirToplam',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center;">' + data + '</div>';
                    }
                },
            ],
            language: {
                url: "//cdn.datatables.net/plug-ins/1.10.12/i18n/Turkish.json"
            },
            ordering: false,
            searching: false,
            lengthChange: false,
            paging: false,
            info: false,
        });
    }
    function tabloGuncelle() {
        if (myDataTable) {
            myDataTable.destroy();
        }
        Bilgiler();
        initializeDataTable();
    }
    $(document).ready(function () {
        Bilgiler();
        initializeDataTable();
    })
    function Bilgiler() {
        $.ajax({
            type: "POST",
            url: "/SiparisApi/SiparisDetayBilgi",
            data: { id: @id },
            success: function (x) {
                $("#txttoplamadet").text(x.toplamAdet);
                $("#txtaratoplam").text(x.araToplam);
                $("#txtgeneltoplam").text(x.toplamTutar);
                $("#txtiskontotoplam").text(x.istoktoToplam);
                $("#txtkdvtoplam").text(x.kdvToplam);
                $("#txtsiparisno").text(x.siparisNo);
                $("#txtsiparistarihi").text(x.siparisTarihi);
                $("#txtsiparisdurum").text(x.siparisDurum);
                $("#txtkullanici").text(x.kullanici);
                $("#txtindirimlifiyat").text(x.indirimlifiyat);
                $("#txtunvan").text(x.unvan);
                $("#txtfirmaadi").text(x.firmaAdi);
                $("#txtyetkili").text(x.yetkili);
                $("#txttelefon").text(x.telefon);
                $("#txtadres").text(x.adres);
                $("#txttoplamparcaadet").text(x.toplamparcaadet);
                $("#txttoplamm3").text(x.toplamm3);
                $("#txttoplamkg").text(x.toplamkg);
                $("#txttermintarihi").text(x.teslimTarihi);
                $("#txtmusteri").text(x.siparisBayiAciklama);
                $("#txtteslimathafta").text(x.terminHaftasi);
                $("#txtteslimatSekli").text(x.teslimatSekli);
            }
        });
    }
    function TeslimatAc(element) {
        teslimsatirid = element;
        if (myDataTable2) {
            myDataTable2.destroy();
        }
        myDataTable2 = new DataTable('#tesTable', {
            ajax: {
                url: '/SiparisApi/SeciliTeslimatList/' + element,
                method: 'POST',
                dataSrc: '',
                error: function (xhr, error, thrown) {
                    if (xhr.status === 404) {
                        Swal.fire({
                            title: 'Veri alınamadı',
                            animation: false,
                            customClass: 'animated tada',
                            padding: '2em'
                        });
                    }
                    return false;
                }
            },
            columns: [
                {
                    data: 'teslimatTarihi',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center;">' + data + '</div>';
                    }
                },
                {
                    data: 'bayiID',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center;">' + data + '</div>';
                    }
                },
                {
                    data: 'miktar',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center;">' + data + '</div>';
                    }
                },
                {
                    data: 'tamamlanmaDurum',
                    render: function (data, type, row, meta) {
                        return '<div style="text-align: center;">' + data + '</div>';
                    }
                },
                {
                    data: 'id',
                    render: function (data, type, full, meta) {
                        return '<a href="/BLogin/TeslimatDetay/' + data + '" class="btn btn-primary btn-sm" ><i class="fas fa-eye"></i></a>';
                    },
                    orderable: false
                },
            ],
            language: {
                url: "//cdn.datatables.net/plug-ins/1.10.12/i18n/Turkish.json"
            },
            lengthChange: false,
            paging: false,
            info: false,
        });
    }
</script>