@using VNNB2B.Models.Hata
@inject IHttpContextAccessor HttpContextAccessor
@using DataAccessLayer.Concrate
@{
    ViewData["Title"] = "Siparis";
    Layout = "~/Views/Shared/_Bayi.cshtml";
}

@{
    string mesaj = ViewBag.hata;
    var hasError = !string.IsNullOrEmpty(ViewBag.hata);
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @if (hasError)
    {
        <script>
            $(document).ready(function () {
                Swal.fire({
                    icon: 'info',
                    title: '@mesaj'
                });
            });
        </script>
    }
    string cerez;
    HttpContextAccessor.HttpContext.Request.Cookies.TryGetValue("VNNBayiCerez", out cerez);

    int bayiid = Convert.ToInt32(cerez);
    BLoginHata.Icerik = "";
}

<div class="content-header">
    <div class="container">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">
                    <small>
                        Siparişlerim / My Orders
                    </small>
                </h1>
            </div>
        </div>
    </div>
</div>
<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <center><h6 id="sepetyok" style="display:none;">Geçmiş Sipariş Bulunamadı! / No Past Order Found!</h6></center>
            <div id="sepet">
                <div style="font-size:12px;">
                    <table class="table table-bordered" id="sepettable">
                        <thead>
                            <tr>
                                <th>Sipariş Tarihi</th>
                                <th>Sipariş No</th>
                                <th>Toplam Sipariş Miktarı</th>
                                <th>Sipariş Durumu</th>
                                <th>Teslimat Bilgileri</th>
                                <th></th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://code.jquery.com/jquery-3.7.0.js"></script>

<script>
    var satirid = 0;
    var myDataTable;
    function initializeDataTable() {
        myDataTable = new DataTable('#sepettable', {
            ajax: {
                url: '/SiparisApi/SiparisList/@bayiid',
                method: 'POST',
                dataSrc: function (json) {
                    let dataCount = 0;
                    if (Array.isArray(json)) {
                        dataCount = json.length;
                    }
                    else if (json.data && Array.isArray(json.data)) {
                        dataCount = json.data.length;
                    }
                    if (dataCount == 0) {
                        document.getElementById('sepetyok').style.display = 'block';
                        document.getElementById('sepet').style.display = 'none';
                    }
                    else {
                        document.getElementById('sepetyok').style.display = 'none';
                        document.getElementById('sepet').style.display = 'block';
                    }
                    return json.data ? json.data : json;
                },
                error: function (xhr, error, thrown) {
                    if (xhr.status === 404) {
                        Swal.fire({
                            title: 'Veri alınamadı',
                            animation: false,
                            customClass: 'animated tada',
                            padding: '2em'
                        });
                    }
                    return false;
                }
            },
            columns: [
                { data: 'siparisTarihi' },
                { data: 'siparisNo' },
                { data: 'toplamAdet' },
                { data: 'siparisDurum' },
                { data: 'teslimTarihi' },
                {
                    data: 'id',
                    render: function (data, type, full, meta) {
                        return '<a href="/BLogin/SipDet/' + data + '" class="btn btn-primary btn-xs"><i class="fas fa-eye"></i></a> <button type="button" onclick="sil(' + data + ')" class="btn btn-danger btn-xs"><i class="fas fa-trash"></i></button>'
                    }
                }
            ],
            language: {
                url: "//cdn.datatables.net/plug-ins/1.10.12/i18n/Turkish.json"
            },
            ordering: false,
            searching: false,
            lengthChange: false,
            paging: false,
            info: false,
            rowCallback: function (row, data, index) {
                if (data.siparisDurum == "Sipariş Onaylandı...") {
                    $(row).addClass('table-primary');
                }
                else if (data.siparisDurum == "Onay Bekliyor...") {
                    $(row).addClass('table-secondary');
                }
                else if (data.siparisDurum == "Reddedildi...") {
                    $(row).addClass('table-danger');
                }
                else if (data.siparisDurum == "Kısmi Teslim Edildi...") {
                    $(row).addClass('table-warning');
                }
                else if (data.siparisDurum == "Tamamı Teslim Edildi...") {
                    $(row).addClass('table-secondary');
                }
            },
        });
    }
    function tabloGuncelle() {
        if (myDataTable) {
            myDataTable.destroy();
        }
        initializeDataTable();
    }
    $(document).ready(function () {
        initializeDataTable();
    })
    function sil(element) {
        swal.fire({
            title: 'Emin Misin?',
            text: "Kayıt Silinecek!",
            type: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Evet, Sil!',
            cancelButtonText: 'Hayır, Vazgeç!',
            reverseButtons: true,
            padding: '2em'
        }).then(function (result) {
            if (result.value) {
                submitForm(element);
            }
        })
    }
    function submitForm(element) {
        $.ajax({
            type: "POST",
            url: "/SiparisApi/SiparisSil/" + element,
            dataType: "json",
            success: function (result) {
                swal.fire({
                    title: result.status === "success" ? 'Başarılı!' : 'Başarısız!',
                    text: result.message,
                    type: result.status === "success" ? 'success' : 'warning',
                    confirmButtonText: 'Tamam'
                });
                tabloGuncelle();
            }
        });
    }
</script>